<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="service.subtitles.thaisubtitle"
       name="thaisubtitle"
       version="1.0.0"
       provider-name="(http://kodipp.blogspot.com)">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.simple.downloader" version="1.9.4"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>subtitles</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language>en</language>
    <summary lang="en">ThaiSubtitle</summary>
    <summary lang="th">ThaiSubtitle</summary>
    <description lang="en">Get subtitles from thaisubtitle.com</description>
    <description lang="th">สำหรับหา subtitle ภาษาไทย</description>
  </extension>
</addon>
</addons>
